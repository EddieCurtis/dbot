extends ../layout

block content
  div#backlink
    a(href='/notify/'+server) &laquo; Server
  p
  div#controls
    input(type="text", name="search", id="search-text", oninput="searchNotifies(this.value)")
  div#notify_datatable
    table.table.table-hover.data#notifies
      thead
        tr
          th Date
          th Channel
          th type
          th User
          th Message 
      tbody
        for notify in notifies
          tr
            td #{new Date(notify.time)}
            td #{notify.channel}
            td #{notify.type}
            td #{notify.user}
            td #{notify.message}
